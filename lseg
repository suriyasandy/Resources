import base64
import requests

API_KEY = "your_x_api_key"

USERNAME = "your_basic_username"
PASSWORD = ""   # empty since you don't have one

# Build Basic Auth header manually
token = base64.b64encode(f"{USERNAME}:{PASSWORD}".encode()).decode()

headers = {
    "Authorization": f"Basic {token}",
    "x-api-key": API_KEY,
    "Content-Type": "text/plain"
}

url = "https://selectapi.datascope.refinitiv.com/RestApi/v1/Entity/GetSedol"
raw_body = "SEDOL=0263494"

response = requests.post(url, data=raw_body, headers=headers)

print(response.status_code)
print(response.text)
